@page
@model MoneyPlus.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deactivate</h1>

<h4>Are you sure you want to deactivate this category?</h4>
<h6>If you proceed to deactivation, users will not be presented with this category nor any of its subcategories anymore.</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Record Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.RecordType)
        </dd>
        <dt class="col-sm-2">
            Active
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.IsActive)

        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Deactivate" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>