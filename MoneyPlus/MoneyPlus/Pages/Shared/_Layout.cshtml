<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyPlus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneyPlus.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MoneyPlus</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Home">About Us</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <div class="dropdown" collapse d-sm-inline-flex>
                                    <button class="dropbtn">Your Records</button>
                                    <div class="dropdown-content text-dark">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Assets/Index">Assets</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Payees/Index">Payees</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Wallets/Index">Wallets</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/CashOutflows/Index">Cash Outflows</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/CashInflows/Index">Cash Inflows</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Investments/Index">Financial Investments</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="dropdown" collapse d-sm-inline-flex>
                                    <button class="dropbtn">Your Reports</button>
                                    <div class="dropdown-content text-dark">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Reports/MonthlyCashOutflowListing">Monthly Cash Outflow Listing</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Reports/MonthlyBalanceByCategoryAndSub">Monthly Cash Outflows By Category And Subcategory</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Reports/YearlyBalanceByCategory">Yearly Cash Outflows By Category</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Reports/AttainableSabbatical">Attainable Sabbatical Leave</a>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <div class="dropdown" collapse d-sm-inline-flex>
                                    <button class="dropbtn">Restricted Area</button>
                                    <div class="dropdown-content">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Categories/Index">Manage Categories</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Subcategories/Index">Manage Subcategories</a>
                                    </div>
                                </div>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MoneyPlus - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>