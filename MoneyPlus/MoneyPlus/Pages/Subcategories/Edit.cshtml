@page
@model MoneyPlus.Pages.Subcategories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Subcategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subcategory.Id" />
            <input type="hidden" asp-for="Subcategory.CategoryId" />
            <div class="form-group">
                <label asp-for="Subcategory.Name" class="control-label"></label>
                <input asp-for="Subcategory.Name" class="form-control" />
                <span asp-validation-for="Subcategory.Name" class="text-danger"></span>
            </div>
            <p></p>
            <label asp-for="Subcategory.IsActive" class="control-label">Mark as active?</label>
            <select asp-for="Subcategory.IsActive">
                <option value="True">Yes, the subcategory is active.</option>
                <option value="False">No, the subcategory is no longer active.</option>
            </select>
            <p></p>
            <div class="form-group">
                <label asp-for="Subcategory.CategoryId" class="control-label">Category</label>
                <select asp-for="Subcategory.CategoryId" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Subcategory.CategoryId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}