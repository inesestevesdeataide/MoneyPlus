@page
@model MoneyPlus.Pages.Subcategories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deactivate</h1>

<h4>Are you sure you want to deactivate this subcategory?</h4>
<h6>If you proceed to deactivation, users will not be presented with this subcategory anymore.</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subcategory.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subcategory.Name)
        </dd>
        <dt class="col-sm-2">
            Active
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subcategory.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subcategory.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subcategory.CategoryId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Subcategory.Id" />
        <input type="submit" value="Deactivate" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>